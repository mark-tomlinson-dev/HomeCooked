<%= form_with(model: @profile, local: true) do |form| %>
    <% if @profile.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(profile.errors.count, "error") %> prohibited this profile from being saved:</h2>
        <ul>
        <% @profile.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

		<div class="flex h-screen bg-gray-200 p-4">
				<div class="sm:max-w-xl md:max-w-2xl lg:max-w-6xl w-full m-auto">
					<div class="flex items-stretch bg-white rounded-lg shadow-lg overflow-hidden border-t-4 border-indigo-500 sm:border-0">
						<div class="flex hidden overflow-hidden relative sm:block w-5/12 md:w-6/12 bg-gray-600 text-gray-300 py-4 bg-cover bg-center" style="background-image: url('https://source.unsplash.com/xJ2tjuUHD9M/300x300')"> 
							<div class="flex-1 text-white p-10">
								<h3 class="text-4xl font-bold inline-block"><%= "Hi, #{current_user.first_name}" %></h3>
								<p class="text-white whitespace-no-wrap">You're almost there. Just tell us a little bit about yourself and we'll get you on your way.</p>
							</div>
							<svg class="absolute animate h-full w-4/12 sm:w-2/12 right-0 inset-y-0 fill-current text-white" viewBox="0 0 100 100" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="none">
									<polygon points="0,0 100,100 100,0">
							</svg>
						</div>
						<div class="flex-1 p-6 sm:p-10 sm:py-12">
							<h3 class="text-xl text-gray-700 font-bold mb-6">

							<span class="text-gray-400 font-light"></span></h3>
							
							<div>
								<%= form.text_area :about, :rows=>5, :cols=>60, placeholder: "About", autofocus: true, class: "input px-3 w-full py-2 bg-gray-200 border border-gray-200 rounded focus:border-gray-400 focus:outline-none focus:bg-white mb-4" %>
							</div>
              <div>
                <%= form.label :picture, "Upload profile image", class:"label inline text-gray-700 text-sm font-bold mb-2" %>
                <%= form.file_field :picture,  accept: "image/png,image/gif,image/jpg,image/jpeg", placeholder: "Upload profile picture", class: "input px-3 w-full py-2 bg-gray-200 border border-gray-200 rounded focus:border-gray-400 focus:outline-none focus:bg-white mb-4" %>
              </div>

							
							<div class="flex flex-wrap items-center">
								<div class="action w-full sm:flex-1">
									<%= form.submit "Create profile", class: "w-full sm:w-auto bg-indigo-500 text-indigo-100 px-6 py-2 rounded hover:bg-indigo-600 focus:outline-none cursor-pointer" %>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
<% end  %>