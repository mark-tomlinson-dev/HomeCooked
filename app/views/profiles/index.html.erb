<div class="bg-indigo-100">
	<%# THIS IS WHAT IS SETTING THE WIDTH - I.E. IT'S THE CONTENT WRAPPER%>
	<div class="max-w-lg sm:max-w-xl lg:max-w-6xl mx-auto py-6">
		<%# INDIVIDUAL CARD WRAPPER/CONTAINER%>
		<div class="flex flex-wrap p-4 -mx-4">
			<%# THE CARD ITSELF %>
			<% @profiles.each do |profile| %>
				<div class="mt-6 w-full px-4 lg:w-1/3 xl:w-1/4">
					<div class="flex flex-col rounded-lg border bg-white shadow-2xl overflow-hidden">
						<img class="w-full flex-shrink-0 object-cover rounded-lg" src="https://images.unsplash.com/photo-1414235077428-338989a2e8c0?ixlib=rb-1.2.1&auto=format&fit=crop&w=1050&q=80" alt="description">
						<div class="w-full">
							<h2 class="text-xl text-gray-900 px-6 py-4"><%= profile.first_name %></h2>
							<div class="px-6 py-4">
								<p class="text-gray-600"><%= profile.about %></p>
								<h3 class="text-lg font-semibold text-gray-800"><%# listing.date.strftime("%A, %d %b %Y %l:%M %p") %></h3>
							</div>
						</div>
					</div>
				</div>
			<% end %>
		</div>
	</div>
</div>