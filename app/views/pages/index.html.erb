<div class="bg-white">
	<div class="bg-white flex">
		<%# THIS IS THE WRAPPER/CONTAINER FOR LEFT-HAND CONTENT %>
		<div class="px-8 py-12 max-w-md mx-auto sm:max-w-xl lg:max-w-full lg:mx-8 lg:w-1/2 lg:py-24 lg:px-12">
			<%# THIS DIV IS FOR CONSTRAINING THE LEFT-HAND CONTENT ON EXTRA LARGE SCREENS%>
			<div class="xl:max-w-lg"> 
				<img class="mt-6 rounded-lg shadow-xl sm:mt-8 sm:h-64 sm:w-full sm:object-cover sm:object-center lg:hidden" src="https://images.unsplash.com/photo-1528061019198-c2391f414bec?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=500&q=60" alt="Detailed image description would go here.">
				<h1 class="mt-6 text-2xl font-bold text-gray-900 leading-tight sm:mt-8 sm:text-4xl lg:text-3xl xl:text-4xl">Lorem ipsum<br class="hidden lg:inline"><span class="text-purple-500">
				More lorem lorem ipusm</span>
				</h1>
				<p class="mt-2 text-gray-600 sm:mt-4 sm:text-xl">Lorem ipsum dolor, sit amet consectetur adipisicing elit. Fugit, commodi vero! Esse blanditiis aut, dicta labore nostrum vel eaque assumenda, delectus neque voluptate quo saepe, eius expedita dolore repudiandae incidunt.</p>
				<div class="mt-4 sm:mt-6">
					<div class="inline-block px-5 py-3 rounded-lg shadow-lg bg-purple-500 hover:bg-purple-400 focus:outline-none focus:shadow-outline text-sm text-white uppercase tracking-wider font-semibold sm:text-base"><%= link_to "Find a table", listings_path  %></div>
				</div>
			</div>
		</div>

		<%# SECOND CONTAINER DIV. IT'S HIDDEN EXCEPT ON LARGE SCREEENS %>
			<div class="hidden lg:block lg:w-1/2 lg:relative lg:mr-12 lg:mt-12 lg:-ml-8">
				<img class="absolute inset-0 h-full w-full rounded-lg shadow-lg object-cover object-center overflow-hidden " src="https://images.unsplash.com/photo-1528061019198-c2391f414bec?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=500&q=60" alt="Detailed image description would go here.">
			</div>
	</div>

	<div class="bg-gray-100">
		<%# THIS IS WHAT IS SETTING THE WIDTH - I.E. IT'S THE CONTENT WRAPPER%>
		<div class="max-w-lg mt-24 sm:max-w-xl lg:max-w-6xl mx-auto py-6">
			<%# INDIVIDUAL CARD WRAPPER/CONTAINER%>
			<div class="flex flex-wrap p-4 -mx-4">
				<%# THE CARD ITSELF %>
				<% @listings.each do |listing| %>
					<div class="mt-6 w-full px-4 lg:w-1/2 xl:w-1/3">
						<div class="flex flex-col items-center rounded-lg bg-white shadow-lg overflow-hidden">
							<img class="w-full flex-shrink-0 object-cover" src="https://images.unsplash.com/photo-1414235077428-338989a2e8c0?ixlib=rb-1.2.1&auto=format&fit=crop&w=1050&q=80" alt="description">
							<div class="w-full">
								<h2 class="text-xl text-gray-900 px-6 py-4"><%= listing.title %></h2>
								<div class="px-6 py-4">
									<p class="text-gray-600"><%= listing.description %></p>
									<h3 class="text-lg font-semibold text-gray-800"><%= listing.date %></h3>
									<p class="text-gray-600"><%= "#{listing.max_guests} seats left at the table" %></p>
									<p class="text-indigo-500 font-semibold text-sm"><%= "$#{listing.price}" %></p>
								</div>
							</div>
						</div>
					</div>
				<% end %>
			</div>
		</div>
	</div>
</div>

